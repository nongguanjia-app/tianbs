<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/myCourseItem_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/myCourseItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/myCourseItem_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="小麦" />

    <TextView
        android:id="@+id/myCourseItem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/myCourseItem_img"
        android:layout_below="@+id/myCourseItem_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="小麦" />

    <TextView
        android:id="@+id/myCourseItem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/myCourseItem_img"
        android:layout_below="@+id/myCourseItem_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:text="小麦" />

</RelativeLayout>