<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/my_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/default_person_img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/my_icon"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水稻大王"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/phone_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="手机号：13269177194"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <!-- 我的资料 -->

                <RelativeLayout
                    android:id="@+id/my_info"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/my_info_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_myself" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/my_info_img"
                        android:text="@string/my_info" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />

                <!-- 我的下载 

                <RelativeLayout
                    android:id="@+id/my_down"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/my_down_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_down" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/my_down_img"
                        android:text="@string/my_down" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />
                -->

             
                <!-- 修改密码 -->

                <RelativeLayout
                    android:id="@+id/edit_psd"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/edit_psd_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_edit_psd" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/edit_psd_img"
                        android:text="@string/edit_psd" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />

                <!-- 帮助中心 -->

                <RelativeLayout
                    android:id="@+id/help"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/help_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_help" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/help_img"
                        android:text="@string/help" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />

                <!-- 关于我们 -->

                <RelativeLayout
                    android:id="@+id/about"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/about_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_about" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/about_img"
                        android:text="@string/about" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />

                <!-- 升级为推广人 

                <RelativeLayout
                    android:id="@+id/upgrade"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/upgrade_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_dealer" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/upgrade_img"
                        android:text="@string/upgrade_rec" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />
                -->
                <!-- 系统更新 -->

                <RelativeLayout
                    android:id="@+id/upgrade_system"
                    style="@style/my_item_layout" >

                    <ImageView
                        android:id="@+id/upgrade_img"
                        style="@style/my_item_icon"
                        android:src="@drawable/img_update" />

                    <TextView
                        style="@style/my_item_tv"
                        android:layout_toRightOf="@id/upgrade_img"
                        android:text="@string/upgrade_system" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_right" />
                </RelativeLayout>

                <ImageView style="@style/divide" />

                <Button
                    android:id="@+id/exitlogin"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/title_bar_bg"
                    android:text="@string/logout"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>