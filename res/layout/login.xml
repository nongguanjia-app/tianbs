<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/login_default" />

    <!-- 手机号码 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/img_u"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_name" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_u"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_u"
            android:background="@null"
            android:hint="@string/hint_input_phone"
            android:numeric="integer"
            android:textColorHint="@color/text_hint_color" />
    </RelativeLayout>

    <!-- 底部线 -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/title_bar_bg" />

    <!-- 密码 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/img_p"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_psd" />

        <EditText
            android:id="@+id/edit_psd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_p"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_p"
            android:background="@null"
            android:hint="@string/hint_input_psd"
            android:password="true"
            android:textColorHint="@color/text_hint_color" />
    </RelativeLayout>

    <!-- 底部线 -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/title_bar_bg" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/title_bar_bg"
        android:text="@string/login"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >
        
        <!-- 注册 -->
        <LinearLayout
            android:id="@+id/regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/img_regist" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/regist"
                android:textColor="@color/text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 忘记密码 -->
        <LinearLayout
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/img_forget" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/forget_psd"
                android:textColor="@color/text_color"
                android:textSize="14sp" />
        </LinearLayout>

        
    </RelativeLayout>

</LinearLayout>